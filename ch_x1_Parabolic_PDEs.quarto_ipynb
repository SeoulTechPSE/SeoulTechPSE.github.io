        "# Compute u(x, t)\n",
        "def compute_u(x, t, N=N_terms):\n",
        "    u = x *np.cos(t)  # add x cos t term\n",
        "    for n in range(1, N +1):\n",
        "        n_pi = n *np.pi\n",
        "        prefactor = (-1)**(n +1) /n_pi\n",
        "        \n",
        "        # Integrate I_n(t)\n",
        "        integrand = lambda s: np.sin(s) *np.exp(n_pi**2 *(s -t))\n",
        "        I_n, _ = quad(integrand, 0, t)\n",
        "        \n",
        "        A_n = prefactor *I_n\n",
        "        u += A_n *np.sin(n_pi *x)\n",
        "    return u\n",
        "\n",
