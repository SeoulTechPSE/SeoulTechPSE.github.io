    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "x, y = sympy.symbols(\"x, y\")\n",
        "f_mat = sympy.Matrix([y - x**3 -2*x**2 + 1, y + x**2 - 1])\n",
        "f_mat.jacobian(sympy.Matrix([x, y]))"
      ],
      "id": "f532251e",
