        "plt.figure(figsize=(6, 4))\n",
        "plt.plot(x_vals, f_vals, color='red', label=r'$\\tilde{f}$')\n",
        "plt.plot(x_vals, g_vals, color='blue', label=r'$\\tilde{g}$')\n",
        "\n",
        "plt.title(r'$\\tilde{f}(x), \\tilde{g}(x)$ on $[0, 4)$')\n",
        "plt.xlabel('x')\n",
        "plt.ylabel(r'$\\tilde{f}(x), \\tilde{g}(x)$')\n",
        "plt.legend()\n",
        "plt.grid(True)\n",
        "plt.tight_layout()\n",
        "plt.show()"
