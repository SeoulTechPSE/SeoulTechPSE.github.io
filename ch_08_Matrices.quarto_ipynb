      "cell_type": "code",
      "metadata": {},
      "source": [
        "# | echo: true\n",
        "def deflation_method(A, n_iteration):\n",
        "    \n",
        "    n = A.shape[1]\n",
        "\n",
        "    K = np.zeros((n, n))\n",
        "    Lambda = np.zeros(n)\n",
        "    \n",
        "    k0 = np.zeros(n)\n",
        "    L0 = 0\n",
        "    for i in range(n):\n",
        "        A = A -L0 *np.outer(k0, k0)\n",
        "        k0 = power_method(A, n_iteration)\n",
        "        L0 = Rayleigh_quotient(A, k0)\n",
        "        K[i, :] = k0\n",
        "        Lambda[i] = L0\n",
        "        \n",
        "    return K, Lambda      \n",
        "\n",
        "# symmetric matrix\n",
        "A = np.array([[1, 2, -1], [2, 1, 1], [-1, 1, 0]])\n",
