    },
    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "x = np.linspace(a, b, 1 +2**6)\n",
        "y = f(x)\n",
        "dx = x[1] -x[0]\n",
        "\n",
        "val_exact -integrate.romb(y, dx=dx)"
      ],
      "id": "575ad425",
